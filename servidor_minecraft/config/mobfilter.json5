{
  rules: [
    {
      // Reduce hostile mob spawns at night in the Overworld
      dimensions: ["minecraft:overworld"],
      time: ["night"],
      mobTypes: ["minecraft:zombie", "minecraft:skeleton", "minecraft:creeper", "minecraft:spider", "minecraft:enderman"],
      maxPerChunk: 5,
      action: "deny"
    },
    {
      // Allow passive mobs to spawn normally
      dimensions: ["minecraft:overworld"],
      mobTypes: ["minecraft:cow", "minecraft:sheep", "minecraft:pig", "minecraft:chicken"],
      action: "allow"
    }
  ]
}